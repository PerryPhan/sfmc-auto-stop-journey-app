{
  "manifest_version": 3,
  "name": "SFMC AutoStopJourney App",
  "version": "1.0.0",
  "description": "An custom app by Dai Phan who want to stop journeys fast",
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "author": "Dai Phan <daiphan308@gmail.com>",
  "permissions": [
    "declarativeContent",
    "activeTab"
  ],
  "background" : {
    "scripts": ["background.js"],
    "persistent": false
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  }
}
